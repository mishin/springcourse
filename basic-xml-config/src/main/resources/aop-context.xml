<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
       ">

    <description>
        This is an example Spring configuration file.
        Contains AOP declarations.
    </description>

    <!--<context:load-time-weaver/>-->
    <!--<context:component-scan base-package="com.houston"/>-->

    <bean name="exampleBeanTarget" class="com.houston.training.spring.basic.ExampleBeanImpl"
          scope="prototype"/>

    <bean id="poolTargetSource" class="org.springframework.aop.target.CommonsPoolTargetSource">
        <property name="targetBeanName" value="exampleBeanTarget"/>
        <property name="maxSize" value="20"/>
    </bean>

    <bean id="exampleBean" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource" ref="poolTargetSource"/>
    </bean>

    <bean id="profilerAspect" class="com.houston.training.spring.basic.aspect.TimingAspect"/>
    <bean id="tracingAspect" class="com.houston.training.spring.basic.aspect.TracingAspect"/>


    <aop:config>
        <!--        <aop:pointcut id="flow"
        expression="execution(* com.houston..*.*(..)) and args(name, age)"/>
        -->
        <aop:pointcut id="allMethods"
                      expression="execution(* com.houston..*.*(..))"/>
        <aop:aspect ref="profilerAspect">
            <aop:around pointcut-ref="allMethods"
                        method="profile"/>
        </aop:aspect>
        <aop:aspect ref="tracingAspect">
            <aop:around pointcut-ref="allMethods"
                        method="enter"/>
            <aop:after-returning returning="returnValue" method="afterReturning" pointcut-ref="allMethods"/>
        </aop:aspect>
    </aop:config>

</beans>
